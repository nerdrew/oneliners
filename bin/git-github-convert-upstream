#!/bin/bash

set -eu -o pipefail

main() {
  local stashed url

  if ! git diff --quiet; then
    stashed=1
    git stash
  fi

  git checkout master
  git remote rename origin upstream
  url=$(git remote get-url upstream)
  git remote add origin "git@github.com:nerdrew/${url#https://github.com/*/}"
  git fetch origin
  git branch --set-upstream-to=origin/master

  if [[ -n "$stashed" ]]; then
    git stash pop
  fi
}

main "$@"
