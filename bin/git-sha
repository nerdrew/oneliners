#!/bin/bash

set -eu -o pipefail

usage() {
  cat <<EOF
Usage: git sha [BRANCH=HEAD]

Copy the sha for BRANCH and print it.
EOF

  exit "$1"
}

main() {
  local sha branch

  if [[ $# -eq 1 ]]; then
    if [[ "$1" == "-h" || "$1" == "--help" ]]; then
      usage 0
    fi
    branch=$1
  elif [[ $# -eq 0 ]]; then
    branch=HEAD
  else
    usage 1
  fi

  sha=$(git rev-parse --verify $branch)
  echo -n "$sha" | pbcopy
  echo "$sha"
}

main "$@"
